<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header data-bs-theme="dark">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Nitro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Əsas səhifə</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cars/List">Avtomobillər</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" href="/Cars/electro">Elektro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cars/fuel">Benzin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ShopCart/">Səbət</a>
                        </li>
                    </ul>
                    <form class="form-check-inline mt-2 mt-md-0">
                        <input class="form-control me-2" type="text" placeholder="Axtariş" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Axtariş</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div>
    <footer class="container">
        <p class="float-right"><a href="#">Back to top</a></p>
        <p>© 2017–2023 Bütun hüquqlar qorunur · <a href="#">Razilaşma</a></p>
    </footer>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
