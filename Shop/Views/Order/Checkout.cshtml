@model Order

<div class="row">
    <h3>Sifariş etmək</h3>
    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-form="name"></label>
            <div class="col-md-5">
                <input asp-form="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-form="surname"></label>
            <div class="col-md-5">
                <input asp-form="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-form="adress"></label>
            <div class="col-md-5">
                <input asp-form="adress" class="form-control" />
                <span asp-validation-for="adress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-form="phone"></label>
            <div class="col-md-5">
                <input asp-form="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-form="email"></label>
            <div class="col-md-5">
                <input asp-form="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="sumbit" value="Sifarişi tamamlayin" />
    </form>
</div>